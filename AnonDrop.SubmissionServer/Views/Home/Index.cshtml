@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>AnonDrop Submission Server</h1>

<form method="post" action="@Model.Action">
	<div class="form-group">
		<label for="urlBox">Anonpaste URL</label>
		<input type="url" class="form-control" name="link" id="urlBox">
	</div>
	<div class="form-group">
		<label for="passBox">Password</label>
		<input type="password" class="form-control" name="password" id="passBox">
	</div>
	<button type="submit" class="btn btn-outline-primary">Submit</button>
</form>